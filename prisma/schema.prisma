// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Organization {
  id                   String   @id @default(cuid())
  clerkOrgId           String?  @unique // Clerk organization ID
  name                 String
  slug                 String   @unique
  stripeCustomerId     String?
  stripeSubscriptionId String?
  planId               String   @default("free-trial")
  onboardingComplete   Boolean  @default(false)
  settings             Json     @default("{}")
  // Twilio subaccount for isolated phone number management
  twilioSubaccountSid  String?
  twilioAuthToken      String?  // Encrypted in production
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  users              User[]
  agents             Agent[]
  campaigns          Campaign[]
  calls              Call[]
  phoneNumbers       PhoneNumber[]
  knowledgeDocs      KnowledgeDocument[]
  contacts           Contact[]
  dncEntries         DNCEntry[]
  consents           Consent[]
  pendingInvitations PendingInvitation[]
  apiKeys            ApiKey[]
  appointments       Appointment[]
  calendarSettings   CalendarSettings?
  auditLogs          AuditLog[]
  departments        Department[]
  staffMembers       StaffMember[]
  receptionistMessages ReceptionistMessage[]
  cnamProfile          CnamProfile?
  poolNumbers          PhoneNumberPool[]

  @@index([slug])
  @@index([clerkOrgId])
  @@index([stripeCustomerId])
  @@index([twilioSubaccountSid])
}

model User {
  id             String       @id @default(cuid())
  clerkId        String       @unique
  email          String
  name           String?
  imageUrl       String?
  role           String       @default("member") // owner, admin, manager, member, viewer
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([clerkId])
}

model Agent {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  vapiAssistantId String?
  name            String
  description     String?
  systemPrompt    String       @db.Text
  firstMessage    String?
  voiceProvider   String       @default("vapi")
  voiceId         String       @default("Elliot")
  language        String       @default("en-US")
  modelProvider   String       @default("openai")
  model           String       @default("gpt-4o")
  isActive        Boolean      @default(true)
  settings        Json         @default("{}")
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  calls        Call[]
  campaigns    Campaign[]
  phoneNumbers PhoneNumber[]
  appointments Appointment[]
  receptionistMessages ReceptionistMessage[]

  @@index([organizationId])
  @@index([vapiAssistantId])
}

model PhoneNumber {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  vapiPhoneId    String?      // Vapi phone number ID (after import to Vapi)
  twilioSid      String?      // Twilio phone number SID (for SaaS-managed numbers)
  number         String
  friendlyName   String?
  callerIdName   String?      // Business name displayed on caller ID (CNAM)
  cnamStatus     String?      // none, pending, registered, failed
  cnamSid        String?      // Twilio CNAM assignment SID
  type           String       @default("local") // local, toll_free, mobile
  provider       String       @default("twilio-managed") // twilio-managed, twilio-imported, vapi
  countryCode    String?      // ISO country code (US, GB, GH, etc.)
  agentId        String?
  agent          Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)
  isActive       Boolean      @default(true)
  monthlyCost    Int          @default(0) // Cost in cents for billing
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([vapiPhoneId])
  @@index([twilioSid])
  @@index([provider])
}

model Campaign {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agentId        String
  agent          Agent        @relation(fields: [agentId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  status         String       @default("draft") // draft, scheduled, running, paused, completed
  scheduleStart  DateTime?
  scheduleEnd    DateTime?
  timeZone       String       @default("America/New_York")
  callingHours   Json         @default("{\"start\": \"09:00\", \"end\": \"17:00\"}")
  maxCallsPerDay Int          @default(100)
  settings       Json         @default("{}")
  stats          Json         @default("{}")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  contacts Contact[]
  calls    Call[]

  @@index([organizationId])
  @@index([status])
}

model Contact {
  id             String    @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  campaignId     String?
  campaign       Campaign? @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  phoneNumber    String
  firstName      String?
  lastName       String?
  email          String?
  company        String?
  customData     Json      @default("{}")
  status         String    @default("pending") // pending, called, completed, failed, dnc
  notificationPreference String @default("both") // email, sms, both, none
  lastCalledAt   DateTime?
  callAttempts   Int       @default(0)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  calls        Call[]
  appointments Appointment[]

  @@index([organizationId])
  @@index([campaignId])
  @@index([phoneNumber])
  @@index([status])
}

model Call {
  id              String       @id @default(cuid())
  organizationId  String
  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agentId         String?
  agent           Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)
  campaignId      String?
  campaign        Campaign?    @relation(fields: [campaignId], references: [id], onDelete: SetNull)
  contactId       String?
  contact         Contact?     @relation(fields: [contactId], references: [id], onDelete: SetNull)
  vapiCallId      String?      @unique
  direction       String       // inbound, outbound
  status          String?      // queued, ringing, in-progress, completed, failed, no-answer
  fromNumber      String?
  toNumber        String?
  startedAt       DateTime?
  endedAt         DateTime?
  durationSeconds Int?
  recordingUrl    String?
  transcript      String?      @db.Text
  summary         String?      @db.Text
  sentiment       String?      // positive, neutral, negative
  leadScore       Int?
  analysis        Json         @default("{}")
  costCents       Int          @default(0)
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  appointments    Appointment[]

  @@index([organizationId])
  @@index([agentId])
  @@index([campaignId])
  @@index([vapiCallId])
  @@index([status])
  @@index([createdAt])
}

model KnowledgeDocument {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agentId        String?
  name           String
  type           String       // pdf, docx, url, manual
  sourceUrl      String?
  content        String?      @db.Text
  isActive       Boolean      @default(true)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([agentId])
}

model DNCEntry {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  phoneNumber    String
  source         String       // national, internal, verbal_request
  reason         String?
  addedAt        DateTime     @default(now())

  @@unique([organizationId, phoneNumber])
  @@index([organizationId])
  @@index([phoneNumber])
}

model Consent {
  id            String    @id @default(cuid())
  organizationId String
  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contactPhone  String
  consentType   String    // PEWC, EXPRESS, EBR
  consentMethod String    // web_form, verbal, paper
  consentText   String    @db.Text
  ipAddress     String?
  timestamp     DateTime  @default(now())
  expiresAt     DateTime?
  revokedAt     DateTime?

  @@index([organizationId])
  @@index([contactPhone])
}

model PendingInvitation {
  id                String       @id @default(cuid())
  organizationId    String
  organization      Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  email             String
  role              String       @default("member") // admin, manager, member, viewer
  clerkInvitationId String?      // Clerk invitation ID for tracking
  invitedById       String       // Clerk user ID of inviter
  acceptedAt        DateTime?
  revokedAt         DateTime?
  expiresAt         DateTime
  createdAt         DateTime     @default(now())

  @@unique([organizationId, email])
  @@index([organizationId])
  @@index([email])
}

model ApiKey {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  keyHash        String       @unique // SHA256 hash of the API key
  keyPrefix      String       // First 12 chars for display (vxf_xxxxxxxx...)
  createdById    String       // Clerk user ID who created the key
  lastUsedAt     DateTime?
  revokedAt      DateTime?
  createdAt      DateTime     @default(now())

  @@index([organizationId])
  @@index([keyHash])
}

model Appointment {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contactId      String?
  contact        Contact?     @relation(fields: [contactId], references: [id], onDelete: SetNull)
  agentId        String?      // Agent that booked the appointment
  agent          Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)
  callId         String?      // Call during which appointment was booked
  call           Call?        @relation(fields: [callId], references: [id], onDelete: SetNull)

  // Appointment details
  title          String
  description    String?      @db.Text
  scheduledAt    DateTime     // Start time of appointment
  duration       Int          @default(30) // Duration in minutes
  endAt          DateTime     // Computed end time
  timeZone       String       @default("America/New_York")

  // Meeting details
  meetingType    String       @default("phone") // phone, video, in_person
  meetingLink    String?      // Video call link (Zoom, Google Meet, etc.)
  location       String?      // Physical location if in-person
  phoneNumber    String?      // Phone number for phone meetings

  // Attendee info (from contact or manually entered)
  attendeeName   String?
  attendeeEmail  String?
  attendeePhone  String?
  notificationPreference String? // email, sms, both, none - overrides contact preference if set

  // Status tracking
  status         String       @default("scheduled") // scheduled, confirmed, completed, cancelled, no_show, rescheduled
  confirmedAt    DateTime?
  cancelledAt    DateTime?
  cancelReason   String?
  completedAt    DateTime?

  // Reminders
  reminderSentAt DateTime?    // Phone/email reminder sent
  smsReminderSentAt DateTime? // SMS reminder sent

  // External calendar sync
  externalCalendarId String?  // ID in external calendar (Google, Outlook)
  externalCalendarType String? // google, outlook, calendly

  notes          String?      @db.Text
  metadata       Json         @default("{}")
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([organizationId])
  @@index([contactId])
  @@index([agentId])
  @@index([scheduledAt])
  @@index([status])
}

model CalendarSettings {
  id             String       @id @default(cuid())
  organizationId String       @unique
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Availability settings
  timeZone       String       @default("America/New_York")
  availableDays  Json         @default("[1,2,3,4,5]") // 0=Sunday, 1=Monday, etc.
  startTime      String       @default("09:00") // Daily start time (HH:mm)
  endTime        String       @default("17:00") // Daily end time (HH:mm)

  // Meeting defaults
  defaultDuration    Int      @default(30) // Default meeting duration in minutes
  bufferBefore       Int      @default(0)  // Buffer time before meetings (minutes)
  bufferAfter        Int      @default(15) // Buffer time after meetings (minutes)
  maxAdvanceBooking  Int      @default(30) // Max days in advance to book
  minNoticeTime      Int      @default(24) // Minimum hours notice required

  // Meeting types enabled
  allowPhone     Boolean      @default(true)
  allowVideo     Boolean      @default(true)
  allowInPerson  Boolean      @default(false)

  // Video conferencing integration
  videoProvider  String?      // zoom, google_meet, teams
  videoApiKey    String?      // Encrypted API key for video provider

  // External calendar sync
  googleCalendarId    String?
  googleRefreshToken  String?
  outlookCalendarId   String?
  outlookRefreshToken String?

  // Notifications
  sendConfirmation   Boolean  @default(true)
  sendReminder       Boolean  @default(true)
  reminderHoursBefore Int     @default(24)

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
}

model AuditLog {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  action         String
  entityType     String
  entityId       String?
  userId         String?
  details        Json         @default("{}")
  createdAt      DateTime     @default(now())

  @@index([organizationId])
  @@index([action])
  @@index([entityType, entityId])
  @@index([createdAt])
}

model Department {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  name           String
  description    String?
  phoneNumber    String?
  extension      String?
  email          String?
  isActive       Boolean      @default(true)
  businessHours  Json         @default("{}") // Per-day start/end + timezone
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  staffMembers StaffMember[]
  messages     ReceptionistMessage[]

  @@unique([organizationId, name])
  @@index([organizationId])
}

model StaffMember {
  id                   String       @id @default(cuid())
  organizationId       String
  organization         Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  departmentId         String
  department           Department   @relation(fields: [departmentId], references: [id], onDelete: Cascade)
  name                 String
  role                 String?
  phoneNumber          String?
  email                String?
  isAvailable          Boolean      @default(true)
  availabilitySchedule Json         @default("{}") // Per-day hours
  createdAt            DateTime     @default(now())
  updatedAt            DateTime     @updatedAt

  messages ReceptionistMessage[]

  @@index([organizationId])
  @@index([departmentId])
}

model ReceptionistMessage {
  id             String       @id @default(cuid())
  organizationId String
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  agentId        String?
  agent          Agent?       @relation(fields: [agentId], references: [id], onDelete: SetNull)
  callId         String?
  departmentId   String?
  department     Department?  @relation(fields: [departmentId], references: [id], onDelete: SetNull)
  staffMemberId  String?
  staffMember    StaffMember? @relation(fields: [staffMemberId], references: [id], onDelete: SetNull)

  callerName    String?
  callerPhone   String?
  callerEmail   String?
  callerCompany String?
  subject       String?
  body          String       @db.Text
  urgency       String       @default("normal") // low, normal, high, urgent
  status        String       @default("new")    // new, read, forwarded, resolved
  forwardedAt   DateTime?
  forwardedVia  String?      // email, sms
  resolvedAt    DateTime?
  resolvedBy    String?
  notes         String?      @db.Text
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([organizationId])
  @@index([status])
  @@index([urgency])
  @@index([departmentId])
  @@index([staffMemberId])
  @@index([createdAt])
}

model CnamProfile {
  id                  String   @id @default(cuid())
  organizationId      String   @unique
  organization        Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Business information
  businessName        String
  businessType        String   // sole_proprietorship, partnership, llc, corporation
  ein                 String?  // Tax ID / EIN
  businessAddress     String
  businessCity        String
  businessState       String
  businessZip         String
  businessCountry     String   @default("US")
  contactFirstName    String
  contactLastName     String
  contactEmail        String
  contactPhone        String

  // Twilio Trust Hub IDs
  customerProfileSid  String?  // Twilio Customer Profile SID
  endUserSid          String?  // Twilio End User SID
  trustProductSid     String?  // Twilio Trust Product SID
  policySid           String?  // Twilio Policy SID used

  // Status tracking
  status              String   @default("draft") // draft, pending_review, in_review, approved, rejected, failed
  rejectionReason     String?
  approvedAt          DateTime?

  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([organizationId])
  @@index([status])
}

model LandingEvent {
  id        String   @id @default(cuid())
  event     String   // button_click, call_start, call_end, call_error
  agent     String?  // male, female
  duration  Int?     // seconds
  location  String?  // city, region, country
  userAgent String?
  sessionId String?
  metadata  Json     @default("{}")
  createdAt DateTime @default(now())

  @@index([event])
  @@index([createdAt])
  @@index([agent])
}

model PhoneNumberPool {
  id              String        @id @default(cuid())
  twilioSid       String        @unique
  number          String        @unique
  friendlyName    String?
  type            String        @default("local") // local, toll_free, mobile
  countryCode     String        @default("US")
  areaCode        String?
  region          String?
  locality        String?
  status          String        @default("available") // available, assigned
  organizationId  String?
  organization    Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)
  assignedAt      DateTime?
  monthlyCost     Int           @default(0) // Twilio cost in cents
  saasMonthlyCost Int           @default(0) // What we charge, in cents
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt

  @@index([status])
  @@index([countryCode, type])
  @@index([organizationId])
}

