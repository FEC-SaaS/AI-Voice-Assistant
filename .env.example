# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Database (Supabase PostgreSQL)
# For production/Vercel: Use connection pooler (port 6543) with pgbouncer=true
DATABASE_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection for migrations (port 5432)
DIRECT_URL="postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres"

# For local development (uncomment these and comment out the above):
#DATABASE_URL="postgresql://postgres:password@localhost:5432/calltone"
#DIRECT_URL="postgresql://postgres:password@localhost:5432/calltone"

# Redis (Upstash)
UPSTASH_REDIS_URL=
UPSTASH_REDIS_TOKEN=

# Auth (Clerk)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SIGNING_SECRET=

# Clerk redirect URLs (Next.js specific - no NEXT_PUBLIC_ prefix needed)
CLERK_SIGN_IN_URL=/sign-in
CLERK_SIGN_UP_URL=/sign-up
CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard/onboarding

# Vapi.ai
VAPI_API_KEY=
# Webhook secret from Vapi dashboard (recommended for production security)
VAPI_WEBHOOK_SECRET=

# openssl rand -hex 32

# Stripe
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# Stripe Price IDs (create these in your Stripe Dashboard)
STRIPE_STARTER_PRICE_ID=
STRIPE_PROFESSIONAL_PRICE_ID=
STRIPE_BUSINESS_PRICE_ID=
# Metered price for overage minutes ($0.15/min) - create as usage-based price in Stripe
STRIPE_OVERAGE_PRICE_ID=

# OpenAI (for conversation intelligence)
OPENAI_API_KEY=

# Storage (Cloudflare R2)
R2_ENDPOINT=
R2_ACCESS_KEY=
R2_SECRET_KEY=
R2_BUCKET_NAME=

# Email (Resend)
RESEND_API_KEY=
# Custom from address (requires verified domain in Resend)
# Format: "Name <email@yourdomain.com>"
# Leave blank to use Resend's test sender (onboarding@resend.dev) - only works for sending to your own email
EMAIL_FROM_ADDRESS=

# Monitoring — Sentry
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_ORG=
SENTRY_PROJECT=
SENTRY_AUTH_TOKEN=

# Analytics — PostHog
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# Cron Jobs (for campaign execution and call analysis)
# Generate a random secret: openssl rand -hex 32
CRON_SECRET=

# Twilio 
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here